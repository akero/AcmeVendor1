<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.vender.VenderDashBoardActivity">

        <!-- Loading code -->

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <!-- Loading code end -->


        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/acmelogo" />

            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_notification" />


        </RelativeLayout>


        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_below="@id/topBar"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:padding="@dimen/_10sdp">


            <TextView
                android:id="@+id/tvCampaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/dmsansregular"
                android:text="Recce"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <Button
                android:id="@+id/btnUpdatePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCampaign"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Store Photo 1"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnUpdatePhoto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnUpdatePhoto"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Store Photo 2"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnUpdatePhoto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnUpdatePhoto1"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Store Photo 3"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnUpdatePhoto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnUpdatePhoto2"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Store Photo 4"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

            <Button
                android:id="@+id/btnUpdatePhoto4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnUpdatePhoto3"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Signature of owner"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:elevation= "1dp"
                android:id= "@+id/line"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#D9D9D9"
                android:layout_below= "@+id/btnUpdatePhoto4"
                />

            <TextView
                android:id="@+id/tvCampaign1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_below="@id/line"
                android:layout_weight="1"
                android:fontFamily="@font/dmsansregular"
                android:text="Signage Board"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llDimensions"
                android:layout_below="@id/tvCampaign1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/dmsansregular"
                        android:text="Dimension / Size in sq. ft"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvHeight"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/primarystroke"
                        android:fontFamily="@font/dmsansregular"
                        android:hint="Height"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/texthintcolor"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/tvwidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansregular"
                        android:text=""
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etWidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvwidth"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/primarystroke"
                        android:fontFamily="@font/dmsansregular"
                        android:textColorHint="@color/texthintcolor"
                        android:padding="@dimen/_8sdp"
                        android:hint="Width"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_12ssp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTotalArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llDimensions"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/dmsansregular"
                android:text="Remarks"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/etTotalArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTotalArea"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/primarystroke"
                android:fontFamily="@font/dmsansregular"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/texthintcolor"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:id="@+id/rlAddImage"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/primarystroke"
                android:layout_below="@id/etTotalArea">

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/view"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:onClick="addImage"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_gallery" />

                <TextView
                    android:id="@+id/tvAddSite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/dmsansregular"
                    android:text="Add Site Photograph"
                    android:onClick="addImage"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />

                <com.acme.acmevendor.utility.RoundRectCornerImageView
                    android:id="@+id/ivCampaignImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@color/colorPrimarylight"
                    android:onClick="addImage"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnUpdatePhoto5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlAddImage"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/primarystroke"
                android:clickable= "true"
                android:fontFamily="@font/dmsansregular"
                android:text="Upload Signage Board Details"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />


        </RelativeLayout>

        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/abc"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_50sdp"
            android:onClick="onPlusClick"
            android:id="@+id/ivPlus"
            android:src="@drawable/ic_add" />


        <ImageView
            android:id="@+id/ivAddClient"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_above="@id/ivPlus"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:onClick="onAddClientClick"
            android:src="@drawable/ic_addclient" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_90sdp"
            android:id="@+id/ivRedo"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:onClick="onAddVenderClick"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/ivPlus"
            android:src="@drawable/ic_addvender" />


        <ImageView
            android:id="@+id/ivDeleteClient"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_toLeftOf="@id/ivPlus"
            android:layout_marginRight="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:onClick="onDeleteClientClick"
            android:visibility="gone"
            android:src="@drawable/ic_deleteclient" />

        <View
            android:id= "@+id/abc"

            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />


    </RelativeLayout>



</layout>